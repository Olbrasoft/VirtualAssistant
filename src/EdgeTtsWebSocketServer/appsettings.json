{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EdgeTts": {
    "Port": 5555,
    "DefaultVoice": "cs-CZ-AntoninNeural",
    "DefaultRate": "+15%",
    "OutputFormat": "audio-24khz-48kbitrate-mono-mp3",
    "_OutputFormat_Note": "WARNING: Microsoft Edge TTS API only supports 'audio-24khz-48kbitrate-mono-mp3'. Other formats will cause connection failures.",
    "CacheDirectory": "~/.cache/edge-tts-server",
    "MicrophoneLockFile": "/tmp/microphone-active.lock",
    "SpeechLockFile": "/tmp/speech.lock"
  }
}
